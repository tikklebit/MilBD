<Window x:Class="MilBD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MilBD" Height="200" Width="600">
    <Grid Margin="10">
    
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="1">Names</Label>
        
        <ListBox Grid.Row="1" x:Name="N"></ListBox>
        
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="5,0,0,0">
            <TextBox x:Name="text"></TextBox>
            <Button x:Name="button" Margin="0,5,0,0" Click="ButtonWrite">Write</Button>
        </StackPanel>
        
        <Label Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right">SendNames</Label>
        
        <StackPanel Grid.Row="2" Grid.Column="2" Margin="5,0,5,0">
            <TextBox x:Name="text2"></TextBox>
            <Button x:Name="button2" Margin="0,5,0,0" Click="ButtonSend">Read</Button>
        </StackPanel>
        
        <ListBox Grid.Row="1" Grid.Column="3" x:Name="X"></ListBox>
    </Grid>
</Window>